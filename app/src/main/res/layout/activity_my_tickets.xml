<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyTicketsActivity">

    <RelativeLayout
        android:id="@+id/my_tickets_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="15dp"
        android:layout_marginHorizontal="40dp"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/event_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/location_list_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Tickets"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_bold"
                android:includeFontPadding="false" />

        </RelativeLayout>

        <ImageButton
            android:id="@+id/back_btn_setting"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/button_radius_red_solid"
            android:scaleType="center"
            android:src="@drawable/arrow_left" />

        <ImageButton
            android:id="@+id/notif_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="@color/background"
            android:scaleType="centerCrop"
            android:src="@drawable/notification" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="60dp"
        app:layout_constraintTop_toBottomOf="@+id/my_tickets_header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="150dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ticket1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_main_radius"
                android:paddingHorizontal="20dp"
                android:text="23 April 2023"
                android:paddingVertical="5dp"
                android:textAllCaps="false"
                android:textSize="18dp"
                android:textStyle="bold"
                android:drawableLeft="@drawable/icon_ticket"
                android:drawableRight="@drawable/arrow_right"
                android:layout_marginBottom="10dp"
                android:drawablePadding="20dp"
                android:textAlignment="textStart"
                android:fontFamily="@font/poppins_medium"
                android:includeFontPadding="false" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_main_radius"
                android:paddingHorizontal="20dp"
                android:text="07 Mei 2023"
                android:paddingVertical="5dp"
                android:textAllCaps="false"
                android:textSize="18dp"
                android:textStyle="bold"
                android:drawableLeft="@drawable/icon_ticket"
                android:drawableRight="@drawable/arrow_right"
                android:layout_marginBottom="10dp"
                android:drawablePadding="20dp"
                android:textAlignment="textStart"
                android:fontFamily="@font/poppins_medium"
                android:includeFontPadding="false" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_main_radius"
                android:paddingHorizontal="20dp"
                android:text="12 Mei 2023"
                android:paddingVertical="5dp"
                android:textAllCaps="false"
                android:textSize="18dp"
                android:textStyle="bold"
                android:drawableLeft="@drawable/icon_ticket"
                android:drawableRight="@drawable/arrow_right"
                android:layout_marginBottom="10dp"
                android:drawablePadding="20dp"
                android:textAlignment="textStart"
                android:fontFamily="@font/poppins_medium"
                android:includeFontPadding="false" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>